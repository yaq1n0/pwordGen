{
  "name": "pwordgen",
  "version": "0.1.0",
  "description": "A tiny, auditable, TypeScript-native password generator for browser and Node.js",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prettier": "prettier --check src/**/*.ts",
    "prettier:fix": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "prepare": "npm run clean && npm run build",
    "prepublishOnly": "npm run test && npm run type-check && npm run lint && npm run prettier"
  },
  "keywords": [
    "password",
    "generator",
    "crypto",
    "security",
    "typescript",
    "typescript-native",
    "browser",
    "node",
    "nodejs"
  ],
  "author": "Yaqin Hasan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yaq1n0/pwordGen.git"
  },
  "bugs": {
    "url": "https://github.com/yaq1n0/pwordGen/issues"
  },
  "homepage": "https://pwordgen.com",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
